<div id="container">
	<video id="background-video" class="background-video" muted preload="auto">
		<source src="/videos/earth-desktop-1920x1080.mp4" type="video/mp4" />
	</video>
	<!-- Overlay -->
	<div
		class="fixed top-0 left-0 z-0 inset-0 flex items-center justify-center bg-black/65"
	>
	</div>
</div>

<script>
	const videoTag = document.getElementById(
		"background-video",
	) as HTMLVideoElement;

	if (videoTag) {
		// Play video for 3 seconds
		videoTag.play();
		setTimeout(() => {
			videoTag.pause();
			window.addEventListener("scroll", () => {
				videoTag.pause();
				const updateVideo = () => {
					videoTag.currentTime = (window.scrollY / 200) + 3;
					requestAnimationFrame(updateVideo);
				};
				requestAnimationFrame(updateVideo);
			});
		}, 3000);
	}
</script>

<style>
	#background-video {
		@apply fixed top-0 left-0 z-0 inset-0 w-full h-full object-cover;
	}
</style>
